<svg width="250" height="60" viewBox="0 0 250 60" fill="none" xmlns="http://www.w3.org/2000/svg">
  <style>
    @import url('https://fonts.googleapis.com/css2?family=Orbitron:wght@400;700&display=swap');

    .glitch-text {
      font-family: 'Orbitron', sans-serif;
      font-size: 40px;
      font-weight: 700;
      fill: #00FF00; /* Bright Green */
      text-anchor: middle;
      dominant-baseline: central;
      text-shadow: 0 0 5px #00FF00, 0 0 10px #00FF00;
    }

    .glitch-effect {
      animation: glitch-anim 2s infinite linear alternate-reverse;
    }

    .glitch-effect.clone {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      pointer-events: none;
    }

    .glitch-effect.clone:nth-child(1) {
      fill: #FF00FF; /* Bright Magenta */
      clip-path: inset(60% 0 0 0);
      animation: glitch-anim-1 2s infinite linear alternate-reverse;
    }

    .glitch-effect.clone:nth-child(2) {
      fill: #00FFFF; /* Cyan */
      clip-path: inset(0 0 60% 0);
      animation: glitch-anim-2 2s infinite linear alternate-reverse;
    }

    @keyframes glitch-anim {
      0% { transform: translate(0); }
      20% { transform: translate(-2px, 2px); }
      40% { transform: translate(-2px, -2px); }
      60% { transform: translate(2px, 2px); }
      80% { transform: translate(2px, -2px); }
      100% { transform: translate(0); }
    }

    @keyframes glitch-anim-1 {
      0% { transform: translate(-2px, -2px); }
      20% { transform: translate(2px, 0); }
      40% { transform: translate(-2px, 2px); }
      60% { transform: translate(2px, -2px); }
      80% { transform: translate(-2px, 0); }
      100% { transform: translate(0); }
    }

    @keyframes glitch-anim-2 {
      0% { transform: translate(2px, 2px); }
      20% { transform: translate(-2px, 0); }
      40% { transform: translate(2px, -2px); }
      60% { transform: translate(-2px, 2px); }
      80% { transform: translate(2px, 0); }
      100% { transform: translate(0); }
    }
  </style>
  <text x="125" y="35" class="glitch-text glitch-effect">RollupZone</text>
  <text x="125" y="35" class="glitch-text glitch-effect clone">RollupZone</text>
  <text x="125" y="35" class="glitch-text glitch-effect clone">RollupZone</text>
</svg>