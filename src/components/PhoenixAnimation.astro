<div class="phoenix-animation-container">
  <svg class="phoenix-svg" viewBox="0 0 24 24" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
    <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 18c-4.41 0-8-3.59-8-8s3.59-8 8-8 8 3.59 8 8-3.59 8-8 8zm-1-13h2v6h-2zm0 8h2v2h-2z"/>
  </svg>
</div>

<style is:global>
  .phoenix-animation-container {
    width: 100%;
    height: 500px; /* Adjust as needed */
    background-color: #000;
    display: flex;
    justify-content: center;
    align-items: center;
    overflow: hidden;
  }
  .phoenix-svg {
    width: 200px;
    height: 200px;
    color: #ff4500; /* OrangeRed for phoenix */
    animation: phoenix-rise 4s ease-in-out infinite alternate, color-change 8s linear infinite;
  }

  @keyframes phoenix-rise {
    0% {
      transform: translateY(0) scale(1);
      opacity: 0.7;
    }
    50% {
      transform: translateY(-20px) scale(1.1);
      opacity: 1;
    }
    100% {
      transform: translateY(0) scale(1);
      opacity: 0.7;
    }
  }

  @keyframes color-change {
    0% { color: #ff4500; }
    25% { color: #00ffff; }
    50% { color: #ff00ff; }
    75% { color: #00ff00; }
    100% { color: #ff4500; }
  }
</style>