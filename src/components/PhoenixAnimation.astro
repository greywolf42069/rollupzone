<style is:global>
  .phoenix-animation-container {
    width: 100%;
    height: 500px; /* Adjust as needed */
    background-color: #000;
    display: flex;
    justify-content: center;
    align-items: center;
    overflow: hidden;
  }
  .phoenix-svg {
    width: 200px;
    height: 200px;
    color: #ff4500; /* OrangeRed for phoenix */
    animation: phoenix-rise 4s ease-in-out infinite alternate, color-change 8s linear infinite;
  }

  @keyframes phoenix-rise {
    0% {
      transform: translateY(0) scale(1);
      opacity: 0.7;
    }
    50% {
      transform: translateY(-20px) scale(1.1);
      opacity: 1;
    }
    100% {
      transform: translateY(0) scale(1);
      opacity: 0.7;
    }
  }

  @keyframes color-change {
    0% { color: #ff4500; }
    25% { color: #00ffff; }
    50% { color: #ff00ff; }
    75% { color: #00ff00; }
    100% { color: #ff4500; }
  }
</style>